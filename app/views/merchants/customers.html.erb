<div class="center borderBox">
  <table>
    <thead>
      <tr>
        <th colspan="5">Who's About</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= gravatar_for user %></td>
          <td><%= link_to user.username, user %></td>
          <td><%= user.full_address %></td>
          <td><%= number_to_phone user.phone %>
          <td></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>