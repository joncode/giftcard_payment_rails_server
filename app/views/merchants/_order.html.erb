<div class="redeemDisplay">
<% if @redeem %>
  <h1>Enter Customer Redeem Code : </h1>
  <%= simple_form_for(@order, remote: true) do |f| %>
    <%= f.error_notification %>
    <% if @order.errors.any? %>
      <div id="error_explanation">
        <div class="alert alert-error">
          The form contains <%= pluralize(@order.errors.count, "error") %>.
        </div>
        <ul>
          <% @order.errors.full_messages.each do |msg| %>
            <li>* <%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-horizontal">
      <%= f.hidden_field :redeem_id  %>
      <%= f.hidden_field :gift_id  %>
      <%= f.hidden_field :employee_id  %>
      <%= f.hidden_field :provider_id  %>
      <%= f.input :redeem_code, :input_html => { :maxlength => 4 }, :placeholder => "redeem code" %>
    </div>
      <%= f.submit "Submit", :class => "btn" %>
  <% end %>
<% else %>
  <h4>Customer has not Redeemed Gift on their Account yet</h4>
<% end %>
<h2>For Test purposes only: 
  <a href="#" class="btn btn-large btn-primary disabled"><%= @redeem.redeem_code %></a>
  <hr />
</h2>

<%= button_to 'Not Now', orders_merchant_path(@provider), remote: true, method: :get %>


	</div>
</div>
