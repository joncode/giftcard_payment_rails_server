<h2>Completed Transaction History</h2>
<h2><%= link_to "Active Redeems", redeems_merchant_path(@provider) %></h2>
<table>
  <tr>
    <th></th>
    <th colspan="2">To</th>
    <th colspan="2">Drink</th>
    <th>Message</th>
    <th>Date</th>
    <th colspan="2">From</th>
  </tr>

<% @gifts.each do |gift| %>
  <tr>
    <td><%= button_to "Details", detail_merchant_path(gift), method: :get %></td>
    <td><%= list_icon_with_id_for gift.receiver_id %></td>
    <td><%= gift.receiver_name %></td>
    <td colspan="2">
      <%= image_tag get_category_image(gift), {:class => 'iconListView'} %>
      <%= gift.quantity %>&nbsp;<%= gift.item_name %>
    </td>
    <td><%= gift.message %></td>
    <td><%= time_ago_in_words(gift.created_at) %>&nbsp;ago</td>
    <td><%= list_icon_with_id_for gift.giver_id %></td>
    <td><%= gift.giver_name %></td>
  </tr>
<% end %>
</table>