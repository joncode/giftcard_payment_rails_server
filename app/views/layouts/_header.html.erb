    <a class="close" data-dismiss="alert" href="#">Ã—</a>
    <%= msg %>
  </div>
<% end %>
<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <h1>
        <%= link_to image_tag("88-beer-glass-white.png"), home_path, {:class => "brand"} %>
      </h1>
      <%= link_to PAGE_NAME, home_path, {:class => "brand"} %>
      
      <div class="nav pull-right">
        <% if signed_in? %>
        <ul class="nav">
          
