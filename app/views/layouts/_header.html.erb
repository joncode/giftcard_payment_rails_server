
<% flash.each do |name, msg| %>
  <div class="alert alert-<%= name == :notice ? 'error' : 'error' %>">
    <a class="close" data-dismiss="alert" href="#">Ã—</a>
    <%= msg %>
  </div>
<% end %>
<div class="headerColorBackground">
  <div class="logoHeader">
    <%= image_tag("logoGiftboard.png") %>
  </div>
</div>
<div class="navbarWrapper">
