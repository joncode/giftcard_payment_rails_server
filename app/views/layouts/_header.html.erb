<!-- Header -->
  <div class="logoCrooked"></div>
  <div class="headerImage"></div>
  <div class="lineVertHeader lineVert"></div>
  <div class="loggedInBox">
       <% if !current_user.admin && @provider %>
  	<h6><%= link_to 'Logout', signout_path %></h6>
    <h5>Welcome, <a href="/merchants"><%= @current_user.fullname %></a></h5>
  </div>
  
  <div class="vendorTitle">
  	<h5 class="vendorTitleText">
 
      <a href="/merchants/<%= @provider.id %>"><%= @provider.name %></a>
    </h5>
  	<h6 class="vendorAddress">
        <%= @provider.address %>
        <br />
  			<%= @provider.city_state_zip %>
  	</h6>
  </div>
  <% elsif params[:controller] == "brands" %>
    <h6><%= link_to 'Logout', signout_path %></h6><h5>Welcome, <a href="/admin"><%= @current_user.fullname %></a></h5>
  </div>
  
  <div class="vendorTitle">
    <h5 class="vendorTitleText">
      <a href="/brands/<%= @brand.id if @brand %>"><%= @brand.name if @brand %></a>
    </h5>
    <h6 class="vendorAddress">
        <%= @brand.description if @brand %>
        <br />
        <%= @brand.website if @brand %>
    </h6>
  </div>  
  <% else %>
    <h6><%= link_to 'Logout', signout_path %></h6><h5>Welcome, <a href="/admin"><%= @current_user.fullname %></a></h5>
  </div>
  
  <div class="vendorTitle">

    <h6 class="vendorAddress">
        
      <%= link_to 'New Merchant', new_provider_path, :id => 'new' %> |  <%= link_to 'List All', providers_path, :id => 'index'  %> | <a href="/admin">Home</a>
        
    </h6>
        <h5 class="vendorTitleText">
      <% if @provider %>
        <a href="/providers/<%= @provider.id %>"><%= @provider.name %></a>
      <% end %>
    </h5>
  </div> 
  <% end %>
  <div class="lineHorizHeader lineHoriz"></div>
  	<div class="columnTopBlocker"></div>

