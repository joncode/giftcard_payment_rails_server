    <li>
      <%= link_to "Merchants", merchants_path %>
    </li>
      <% else %>
    <li>
      <%= merchant_tag(current_user) %>
    </li> 
    <% end %> 
    <li>
      <%= link_to "Add New Merchant", new_provider_path %>
    </li>
  </ul>
 
  <% end %>

  <ul class="navTop">
