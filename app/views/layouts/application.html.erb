<!DOCTYPE html>
<html>
<head>
  <title><%= PAGE_NAME %></title>
  <%= render 'layouts/shim' %>
  <%= stylesheet_link_tag    "application" %>
  <%= stylesheet_link_tag    "mobile" if mobile_device? %>

  <%= javascript_include_tag "application" %>

  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <% Time::DATE_FORMATS[:custom] = "%B %e at %I:%M %p" %>
  <% Time::DATE_FORMATS[:custom_form] = "%b %e" %>
</head>
<body>

  <div class="container-fluid">
    <% if params[:controller] == 'admins' %>
      <%= render 'layouts/intro' %>
    <% else %>  
      <%= render 'layouts/header' %>
    <% end %>
    <div class="row-fluid">
      <div>
        <div class="gradientBackground"></div>
        <%= yield %>
      </div>
    </div>
    <p>
      <% if mobile_device? %>
        <%#= link_to "Full Site", :mobile => 0 %>
      <% else %>
        <%#= link_to "Mobile Site", :mobile => 1 %>
      <% end %>
    </p>
    <% if params[:controller] != 'admins' %>
      <%#= render 'layouts/footer' %>
    <% end %>

  </div>

</body>

</html>
