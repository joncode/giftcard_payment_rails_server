<!DOCTYPE html>
<html>
<head>
  <title><%= PAGE_NAME %></title>
  <%= render 'layouts/shim' %>
  <%= stylesheet_link_tag    "application" %>
  <%= stylesheet_link_tag    "mobile" if mobile_device? %>
  <%= javascript_include_tag "application" %>

  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <% Time::DATE_FORMATS[:custom] = "%B %e at %I:%M %p" %>
  <% Time::DATE_FORMATS[:custom_form] = "%b %e" %>

  <link href='http://fonts.googleapis.com/css?family=Oswald:400,300,700' rel='stylesheet' type='text/css'>
</head>
<body>
  <div class="bodyDiv">
    <div class="mainWrapper">

      <% if signed_in? %>

        <% if params[:controller] == 'merchants' && params[:action] != 'index' %>
          <!-- no header for menu builder -->
        <% else %>
          <%= render 'layouts/header' %>
        <% end %>
      <% else %>
        <% if params[:controller] == 'admins'  %>
          <%= render 'layouts/intro' %>
        <% else %> 
          <%= render 'layouts/login' %>
        <% end %>
      <% end %>


      <div class="mainContent">
        <%= yield %>
      </div>

        <!-- <% if mobile_device? %>
          <%#= link_to "Full Site", :mobile => 0 %>
        <% else %>
          <%#= link_to "Mobile Site", :mobile => 1 %>
        <% end %> -->

      <% if false %>
        <%= render 'layouts/footer' %>
      <% end %>

    </div>
  </div>


</body>

</html>
