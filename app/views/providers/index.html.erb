<div class="merchantSignInWrapper POSfullPageWrap">
<table>
  <h1 colspan="4"  style="color:#ccc">Check Out Merchants</h1>
    <% unless (@page == 0 && @offset == 0)  %>
      <%= link_to 'Next Page', providers_path({offset: @offset}) %>
    <% end %>
  <tr style="color:#ccc">
    <th>Photo</th>
    <th>Name</th>
    <th>Zinger</th>
    <th>Address</th>
    <th></th>
  </tr>

  <% @merchants.each do |provider| %>
    <tr>
      <td><%= custom_image_tag(provider,180,90)  %></td>
      <td><%= link_to provider.name, provider %></td>
      <td><%= provider.zinger %></td>
      <td><%= provider.full_address %></td>
      <td><%= link_to 'Show', provider %>
        <%= link_to 'Edit', edit_provider_path(provider) %>
        <%= link_to 'Destroy', provider, confirm: 'Are you sure?', method: :delete %></td>
    </tr>
  <% end %>
</table>
</div>

