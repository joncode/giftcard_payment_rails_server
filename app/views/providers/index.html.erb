<table>
  <tr>
    <th colspan="4">Check Out Locations</th>
  </tr>
  <tr>
    <th>Logo</th>
    <th>Name</th>
    <th>Description</th>
    <th>Address</th>
  </tr>

  <% @providers.each do |provider| %>
    <tr>
      <td><%= custom_image_tag(provider,150,150)  %></td>
      <td><%= link_to provider.name, provider %></td>
      <td><%= provider.description %></td>
      <td><%= provider.full_address %></td>
    </tr>
  <% end %>
</table>

