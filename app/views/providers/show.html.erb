<!-- Providers permalink page -->


<div class="providersPermalinkWrapper">
  <h2 class="providerHeader"><%= @provider.name %></h2>
  <%= logo_for @provider %>
  <h2>"<%= @provider.description %>"</h2>
  <h2><%= @provider.full_address %></h2>
  <div class="bs-docs-example">
    <ul id="myTab" class="nav nav-tabs">
      <li class="active providerTab"><a href="#drinkboard" data-toggle="tab">Drinkboard</a></li>
      <li class="providerTab"><a href="#menu" data-toggle="tab">Menu</a></li>
      <li class="providerTab"><a href="#activity" data-toggle="tab">Activity</a></li>
    </ul>

    <div id="myTabContent" class="tab-content">
      
      <div class="tab-pane fadein active" id="drinkboard">
        <% @gifts.each do |gift| %>
        <div class="cellEventWrapper">
          <%= image_tag get_category_image(gift), {:class => 'iconListView'} %>
          <h2>
            <%= time_ago_in_words(gift.created_at) %>
            &nbsp;ago, 
            <a href="">
              <%= gift.giver_name %>
            </a> 
              sent 
            <a href="">
              <%= gift.receiver_name %> 
            </a>
              <%= gift.quantity %> 
              <%= gift.item_name %>.
          </h2>
          
        </div>
        <% end %>
      </div> 




      <div class="tab-pane fade" id="activity">
        <p>Recent Activity At Location</p>
      </div>
      <div class="tab-pane fade" id="menu">
        <table class="table listed">
          <thead>
            <tr>
              <h2>
                <th>Category</th>
                <th>Name</th>
                <th>Detail</th>
                <th>Price</th>
                <th></th>
              </h2>
            </tr>
          </thead>
          <tbody>
            <% @menu.each do |m| %>
              <% item = m[0] %>
              <% price = m[1] %>
            <tr>
              <td><%= image_tag get_category_from_item(item), {:class => 'iconListView'} %></td>
              <td><%= item.item_name %></td>
              <td><%= item.detail %></td>
              <td><%= price %></td>
              <td><%= button_to "Select", choose_from_contacts_gifts_path(provider_id: @provider.id, item_id: item.id, price: price) %></td>
            </tr>
            <% end %>
          </tbody>
        </table>       
      </div>
    </div>
  </div>
</div>


