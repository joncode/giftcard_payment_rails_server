  <%= link_to image_tag("logoCap1.png"), home_path, {:class => "brand"} %>

  <h1 class="row-fluid center">Choose a user to sign in as...</h1>
  <div class="">
    <% @users.each do |u| %>
      <h2><%= u.password %></h2>
      <h2 class="username"><%= u.username %></h2>
      <%= button_to "Sign In", sessions_path(email: u.email, page: 'development'), :class => 'btn btnSignIn'%>
    <% end %>
  </div>

	<h1>Sign Up</h1>

	
  <%= simple_form_for(@user) do |f| %>
    <%= f.error_notification %>
    <%= render 'shared/error_messages' %>
    <div class="row">
      <div class="span1">&nbsp;</div>
      <div class="span9">
        <div class="form-inputs">
          <%= f.input :first_name %>
          <%= f.input :last_name %>
          <%= f.input :email %>
          <%= f.input :password %>
          <%= f.input :password_confirmation %>
        </div>
      </div>
    </div>
    <%= f.submit "Create my Account", class: "btn btn-primary" %>
  <% end %>
  
  <%= link_to image_tag('fb_login.png') , home_path %>
  <%= link_to image_tag('signinwith-foursquare.png'), home_path %>




