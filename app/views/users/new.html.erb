  <!--
    Users Sign In 
  -->

<div class="signinFormWrapper">
  <h1>Sign In</h1>
    <%= form_for(:session, url: sessions_path) do |f| %>
      <%= f.text_field :email,        :placeholder => 'Email' %>
      <%= f.password_field :password, :placeholder => 'Password' %>
      <%= f.submit "Sign in", class: "button" %>
    <% end %>
</div>
<!--
    Auto Sign In
  -->
<h1>Auto Log In</h1>
<div class="autoSigninUsers">
  <% @users.each do |u| %>
  <div class="userCell">
    <%= u.password %>
    <h2 class="username">
      <%= u.username %>
    </h2>
    <h3>
      <%= button_to "Sign In", sessions_path(email: u.email, page: 'development'), :class => 'btn btnSignIn btn-success'%>
    </h3>
  </div>
    <% end %>
</div>

<!--
  User Sign In
-->
	<h1 class="signUpHeader">Sign Up</h1>
  <%= link_to "Forgot password?", reset_password_users_path %>
	<div class="signUpFormWrapper">
    <%= simple_form_for(@user) do |f| %>
    <%= f.error_notification %>
    <%= render 'shared/error_messages' %>
  
    <div class="form-inputs">
      <%= f.input :first_name,            :placeholder => 'First Name' %>
      <%= f.input :last_name,             :placeholder => 'Last Name' %>
      <%= f.input :email,                 :placeholder => 'Email' %>
      <%= f.input :password,              :placeholder => 'Password' %>
      <%= f.input :password_confirmation, :placeholder => 'Password Confirmation' %>
    </div>
      <%= f.submit "Create my Account", class: "btn btn-success createAccount" %>
    <% end %>
  <div class="socialLoginWrapper">
    <h2 class="signinOr">Or...</h2>
    <div class="fbLoginWrapper">
      <%= link_to image_tag('fb_login.png') , APP_CONFIG[:facebook][:loginUrl], :class => "fb_login" %>
    </div>
    <div class="fourSquareLogin">
      <%= link_to image_tag('signinwith-foursquare.png'), APP_CONFIG[:foursquare][:loginUrl], :class => "sq_login" %>
    </div>
  </div>
</div> 



