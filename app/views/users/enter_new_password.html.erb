<% if @message %>
	<p><%= @message %></p>
<% else %>
	<p>What is your email address?</p>
	<%= form_tag(enter_new_password_users_path) do %>
	  <%= label_tag(:password1, "Password:") %>
	  <%= text_field_tag(:password1) %>
		<%= label_tag(:password2, "Password (again):")%>
	  <%= text_field_tag(:password2) %>
	  <%= submit_tag("Submit") %>
	<% end %>
<% end %>