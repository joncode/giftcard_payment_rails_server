
<div class="bs-docs-example">
  <ul id="myTab" class="nav nav-tabs">
    <li class="active"><a href="#drinkboard" data-toggle="tab">Drinkboard</a></li>
    <li><a href="#favorites" data-toggle="tab">Favorites</a></li>
    <li><a href="#activity" data-toggle="tab">Activity</a></li>
  </ul>
    <div id="myTabContent" class="tab-content">
      <div class="tab-pane fade in active" id="drinkboard">
        <table class="table listed">
          <thead>
            <tr>
              <th>Date</th>
              <th colspan="2">To</th>
              <th colspan="2">From</th>
              <th></th>
              <th>Drink</th>
              <th>Message</th>
              <th colspan="2">Location</th>
            </tr>
          </thead>
          <tbody>
          <% @gifts.each do |gift| %>
            <tr>
              <td><%= time_ago_in_words(gift.created_at) %>&nbsp;ago</td>
              <td colspan="2">
                <%= list_icon_with_id_for gift.receiver_id %>
                <%= gift.receiver_name %>
              </td>  
              <td colspan="2">
                  <%= list_icon_with_id_for gift.giver_id %>
                  <%= gift.giver_name %>
              </td>
              <td colspan="2">
                <%= image_tag get_category_image(gift), {:class => 'iconListView'} %>
                <%= gift.quantity %>&nbsp;<%= gift.item_name %>
              </td>
              <td><%= gift.message %></td>
              <td colspan="2">
                <%= logo_from_id_for gift.provider_id %>
                <%= link_to gift.provider_name, provider_path(gift.provider_id) %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <div class="tab-pane fade" id="activity">
        <p>Recent Activity At Location</p>
      </div>
      <div class="tab-pane fade" id="favorites">
        <p>Favorite Places and Drinks</p>
      </div>
    </div>
  </div>