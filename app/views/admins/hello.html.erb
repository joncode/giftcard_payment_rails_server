<% provide(:title, "Sign in") %>

<div class="center logIn">
  <div class="loginHeader">
  <%= link_to image_tag("logoCap1.png"), home_path, {:class => "brand"} %>
</div>
  <h1 class="row-fluid">Please Log in</h1>
  <div class="row-fluid loginForm">
      <%= form_for(:admin, url: admins_path) do |f| %>
        <h2 class="row-fluid"><%= f.label :username %></h2>
        <h2><%= f.text_field :username, value: 'wibble' %></h2>
        <h2 class="row-fluid"><%= f.label :password %></h2>
        <h2><%= f.password_field :password, value: 'drivein' %></h2>
        <%= f.submit "Log in", class: "btn btn-large " %>
      <% end %>
    </div>
  </div>
</div>