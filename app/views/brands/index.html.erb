
<div class="merchantSignInWrapper POSfullPageWrap">
<% if @brands.count > 0 %>

<h1>Listing brands</h1>

<table>
  <tr style="color:#ccc">
    <th>Name</th>
    <th>Description</th>
    <th>Website</th>
    <th>Photo url</th>
    <th></th>

  </tr>

    <% @brands.each do |brand| %>
      <tr>
        <td><%= link_to brand.name, brand %></td>
        <td><%= brand.description %></td>
        <td><%= brand.website %></td>
            <% if brand.has_photo? %>
        <td><%= custom_image_tag(brand, 50, 50) %></td>
            <% else %>
        <td></td>
            <% end %>
        <td><%= link_to 'Show', brand %>
        <%= link_to 'Edit', edit_brand_path(brand) %></td>
      </tr>
    <% end %>
</table>
<% end %>
<br />

</div>
