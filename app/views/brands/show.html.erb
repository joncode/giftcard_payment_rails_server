<div class="merchantSignInWrapper POSfullPageWrap">
<p id="notice"><%= notice %></p>

  <% if @brand.has_photo? %>
  <div class="doubleColumn">

    <%= link_to custom_image_tag(@brand, 600,320), add_photo_brand_path(@brand) %>
  </div>
  <% end %>
<h2>
  <b>Name:</b>
  <%= @brand.name %>
</h2>


<h2>
  <b>Description:</b>
  <%= @brand.description %>
</h2>

<h2>
  <b>Website:</b>
  <%= @brand.website %>
</h2>

<% if @brand.user %>
<h2>
  <b>Super User:</b>
  <%= @brand.user.fullname  %>
</h2>
<% end %>

</div>