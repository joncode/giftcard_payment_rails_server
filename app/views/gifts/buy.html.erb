
<%= link_to 'Buy a friend a Gift', browse_gifts_path %>
<div class="bs-docs-example">
  <ul id="myTab" class="nav nav-tabs">
    <li class="active"><a href="#open" data-toggle="tab">Open</a></li>
    <li><a href="#recent" data-toggle="tab">Recents</a></li>
    <li><a href="#history" data-toggle="tab">History</a></li>
    <li><a href="#drinks" data-toggle="tab">Drinks</a></li>
  </ul>
  <div id="myTabContent" class="tab-content">
    <div class="tab-pane fade in active" id="open">
      <table>
        <thead>
          <tr>
            <th colspan="2">To</th>
            <th colspan="2">Drink</th>
            <th colspan="2">Location</th>
            <th>Message</th>
            <th>Date</th>
          </tr>
        </thead>
        <tbody>
          <% @gifts.each do |gift| %>
            <tr>
              <td colspan="2">
                <%= list_icon_with_id_for gift.receiver_id %>
                <%= gift.receiver_name %>
              </td>
              <td colspan="2">
                <%= image_tag get_category_image(gift), {:class => 'iconListView'} %>
                <%= gift.quantity %>&nbsp;<%= gift.item_name %>
              </td>
              <td colspan="2">
                <%= logo_from_id_for gift.provider_id %>
                <%= gift.provider_name %>
              </td>
              <td><%= gift.message %></td>
              <td><%= time_ago_in_words(gift.created_at) %>&nbsp;ago</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="tab-pane fade" id="recent">
      <table>
        <thead>
          <tr>
            <th colspan="2">To</th>
            <th colspan="2">Drink</th>
            <th colspan="2">Location</th>
            <th>Message</th>
            <th>Date</th>
          </tr>
        </thead>
        <tbody>
          <% @recents.each do |gift| %>
            <tr>
              <td colspan="2">
                <%= list_icon_with_id_for gift.receiver_id %>
                <%= gift.receiver_name %>
              </td>
              <td colspan="2">
                <%= image_tag get_category_image(gift), {:class => 'iconListView'} %>
                <%= gift.quantity %>&nbsp;<%= gift.item_name %>
              </td>
              <td colspan="2">
                <%= logo_from_id_for gift.provider_id %>
                <%= gift.provider_name %>
              </td>
              <td><%= gift.message %></td>
              <td><%= time_ago_in_words(gift.created_at) %>&nbsp;ago</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="tab-pane fade" id="history">
      <table>
        <thead>
          <tr>
            <th colspan="2">To</th>
            <th colspan="2">Drink</th>
            <th colspan="2">Location</th>
            <th>Message</th>
            <th>Date</th>
          </tr>
        </thead>
        <tbody>
          <% @past_gifts.each do |gift| %>
            <tr>
              <td colspan="2">
                <%= list_icon_with_id_for gift.receiver_id %>
                <%= gift.receiver_name %>
              </td>
              <td colspan="2">
                <%= image_tag get_category_image(gift), {:class => 'iconListView'} %>
                <%= gift.quantity %>&nbsp;<%= gift.item_name %>
              </td>
              <td colspan="2">
                <%= logo_from_id_for gift.provider_id %>
                <%= gift.provider_name %>
              </td>
              <td><%= gift.message %></td>
              <td><%= time_ago_in_words(gift.created_at) %>&nbsp;ago</td>
            </tr>
          <% end %>
        </tbody>
      </table>      
    </div>
    <div class="tab-pane fade" id="drinks">
      <p>Drinks you have bought</p>
    </div>
  </div>
</div>

