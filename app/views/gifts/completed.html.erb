
<div class="completedWrapper">
  <h2>
    Thank you!
  </h2>
  <h2>
    - The Drinkboard Staff
  </h2>
  <h2>
    <%= time_ago_in_words(@gift.created_at) %>&nbsp;ago
  </h2>
  
  <div class="">
    <%= custom_image_tag(@giver,50,50)  %>
  </div>
  <h2>
    <%= @gift.giver_name %> 
  </h2>
  <h2>
    bought
    <%= @gift.quantity %> <%= @gift.item_name %>
  </h2>
  <h2>
    For:
    <%= custom_image_tag(@receiver,50,50)  %>
    <%= @gift.receiver_name %>
    <%= custom_image_tag(@gift.provider,150,150)  %>
    @ <%= @gift.provider_name %>
    Redeemed on <%= @order.created_at.to_formatted_s(:rfc822)  %>
    By server: <%= @server.username %>&nbsp;<%= list_icon_for @server %>
  </h2>
</div>
