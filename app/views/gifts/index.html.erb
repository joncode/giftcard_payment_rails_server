<h1>Listing gifts</h1>

<table>
  <tr>
    <th>Giver</th>
    <th>Receiver</th>
    <th>Menu item</th>
    <th>Price</th>
    <th>Quantity</th>
    <th>Total</th>
    <th>Credit card</th>
    <th>Provider</th>
    <th>Message</th>
    <th>Special instructions</th>
    <th>Redeem</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @gifts.each do |gift| %>
  <tr>
    <td><%= gift.giver_id %></td>
    <td><%= gift.receiver_id %></td>
    <td><%= gift.item_id %></td>
    <td><%= gift.price %></td>
    <td><%= gift.quantity %></td>
    <td><%= gift.total %></td>
    <td><%= gift.credit_card %></td>
    <td><%= gift.provider_id %></td>
    <td><%= gift.message %></td>
    <td><%= gift.special_instructions %></td>
    <td><%= gift.redeem_id %></td>
    <td><%= gift.status %></td>
    <td><%= link_to 'Show', gift %></td>
    <td><%= link_to 'Edit', edit_gift_path(gift) %></td>
    <td><%= link_to 'Destroy', gift, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

