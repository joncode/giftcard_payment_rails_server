
<div class="merchantSignInWrapper POSfullPageWrap">
<% if @gifts.count > 0 %>

<h1>Listing Gifts</h1>
<div class="bankCell POSsingleColumn">
    <%= will_paginate(@gifts) %>
</div>
<table>
    <tr style="color:#ccc">
        <th>Gift ID</th>
        <th>Source</th>
        <th>Giver</th>
        <th>Giver ID</th>
        <th>Receiver</th>
        <th>Receiver ID</th>
        <th>Merchant</th>
        <th>Time of Creation</th>
        <th>Tender</th>
        <th>Tax</th>
        <th>Tip</th>
        <th>Service Charge</th>
        <th>Total</th>
        <th>Status</th>
        <th>Administrator Action</th>
    </tr>

        <% @gifts.each do |gift| %>
    <tr>
        <td><%= gift.id %></td>
        <td>#</td>
        <td><%= gift.giver.name %></td>
        <td><%= gift.giver.id %></td>
            <% if gift.receiver %>
        <td><%= gift.receiver.name  %></td>
        <td><%= gift.receiver.id  %></td>
            <% else %>
        <td><%= gift.receiver_name  %></td>
        <td><p>Pending</p></td>
            <% end -%>
        <td><%= gift.provider.name %></td>
        <td><%= time_ago_in_words(gift.created_at) %></td>
        <td>tender</td>
        <td><%= gift.tax %></td>
        <td><%= gift.tip %></td>
        <td><%= gift.service %></td>
        <td><%= gift.total %></td>
        <td><p><%= gift.status %></p></td>
        <td><p>ACTION</p></td>
    </tr>
        <% end %>
</table>
<% end %>
<br />

</div>
