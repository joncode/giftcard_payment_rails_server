<div class="gradientBackground"></div>
<%= link_to 'New Gift', new_gift_path %>
<%= link_to 'Past Gifts', '#' %>
<table>
  <tr>
    <th>Date</th>
    <th>From</th>
    <th colspan="2">Drink</th>
    <th>Location</th>
    <th>Message</th>
    <th>Status</th>
    <th></th>
  </tr>

<% @gifts.each do |gift| %>
  <tr>
    <td><%= time_ago_in_words(gift.created_at) %>&nbsp;ago</td>
    <td><%= gift.giver_name %></td>
    <td colspan="2">
      <%= image_tag get_category_image(gift), {:class => 'iconListView'} %>
      <%= gift.quantity %>&nbsp;<%= gift.item_name %>
    </td>
    <td><%= gift.provider_name %></td>
    <td><%= gift.message %></td>
    <td><%= gift.status %></td>
    <td><%= button_to "Redeem", gift_path(gift), method: :get %></td>
  </tr>
<% end %>
</table>

<br />


