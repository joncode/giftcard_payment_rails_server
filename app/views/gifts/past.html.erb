
<%= link_to 'Buy a Gift for a friend', browse_gifts_path %> |
<%= link_to 'New Gifts', gifts_path %>
<table>
  <thead>
    <tr>
      <th></th>
      <th colspan="2">Drink</th>
      <th colspan="2">Location</th>
      <th>Message</th>
      <th>Date</th>
      <th colspan="2">From</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @gifts.each do |gift| %>
    <tr>
      <td><%= button_to "Details", detail_gift_path(gift), method: :get %></td>
      <td colspan="2">
        <%= image_tag get_category_image(gift), {:class => 'iconListView'} %>
        <%= gift.quantity %>&nbsp;<%= gift.item_name %>
      </td>
      <td><%= logo_from_id_for gift.provider_id %></td>
      <td><%= gift.provider_name %></td>
      <td><%= gift.message %></td>
      <td><%= time_ago_in_words(gift.created_at) %>&nbsp;ago</td>
      <td><%= list_icon_with_id_for gift.receiver_id %></td>
      <td><%= gift.giver_name %></td>
      <td><%= button_to "Send them a Drink", browse_with_contact_gifts_path(id: gift.giver_id)  %></td>
    </tr>
  <% end %>
  </tbody>
</table>



