<div class="bs-docs-example">
  <ul id="myTab" class="nav nav-tabs">
    <li><a href="#recent" data-toggle="tab">Recents</a></li>
    <li class="active"><a href="#locations" data-toggle="tab">Locations</a></li>
    <li><a href="#drinks" data-toggle="tab">Drinks</a></li>
  </ul>
  <div id="myTabContent" class="tab-content">
    <div class="tab-pane fade" id="recent">
      <p>Recent Activity</p>
    </div>
    <div class="tab-pane fade in active" id="locations">
      <table class="table listed">
        <tr>
          <th>Name</th>
          <th>Description</th>
        </tr>
        <tr>
         <% @providers.each do |p| %>
           <td><%= link_to p.name, browse_with_location_gifts_path, {:class => "iconListView"} %></td>
           <td><%= p.description %></td>
         <% end %>
        </tr> 
      </table>       
    </div>
    <div class="tab-pane fade" id="drinks">
      <p>Menu Items by category - speciatly drinks - each category</p>
    </div>
  </div>
</div>

